---
import { ClientRouter } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<nav>
			<a href="/">Home</a> |
			<a href="/about">About</a> |
			<a href="/blog">Blog</a> |
			<a href="/contact">Contact</a> |
			<a href="/tos">ToS</a> |
			<a href="https://github.com/locmai0808/astro-test" target="_blank">GitHub Repo (External Link)</a>
		</nav>
		<slot />
	</body>
</html>
